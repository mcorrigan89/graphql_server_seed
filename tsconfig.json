{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "removeComments": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "moduleResolution": "node",
    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "traceResolution": false,
    "resolveJsonModule": true,
    "paths": {
      "@data/*": ["src/data/*"],
      "@graphql/*": ["src/graphql/*"],
      "@services/*": ["src/services/*"],
      "@schema/*": ["src/schema/*"],
      "@src/*": ["src/*"],
      "@app/*": ["src/app/*"],
      "@utils/*": ["src/utils/*"],
      "@tests/*": ["tests/*"]
    }
  },
  "include": [
    "src/**/*",
    "typings"
  ],
  "exclude": [
    "node_modules",
    "test_reports",
    "migration",
    "tests",
    "jest.config.js",
    "ormconfig.js",
    "paths.js",
    "dist"
  ]
}