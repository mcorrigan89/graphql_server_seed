{
  "name": "graphql_server_seed",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "start": "NODE_ENV=production node -r ts-node/register/transpile-only -r tsconfig-paths/register dist/index",
    "build": "tsc",
    "start:dev": "ts-node --files  -r tsconfig-paths/register src/index",
    "generate": "yarn plop --plopfile ./templates/plopfile.js",
    "postgenerate": "yarn codegen",
    "codegen": "graphql-codegen --config codegen.yml",
    "lint": "yarn eslint --ext .tsx --ext .ts src/",
    "lint:fix": "yarn eslint --ext .tsx --ext .ts src/ --fix",
    "test": "NODE_ENV=test jest --config jest.config.js --coverage --detectOpenHandles"
  },
  "dependencies": {
    "apollo-server": "^3.5.0",
    "apollo-server-plugin-response-cache": "^3.4.0",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dataloader": "^2.0.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "graphql": "^16.2.0",
    "graphql-tools": "^8.2.0",
    "inquirer-file-tree-selection-prompt": "^1.0.3",
    "ioredis": "^4.17.3",
    "jsonwebtoken": "^9.0.0",
    "lodash": "^4.17.15",
    "morgan": "^1.9.1",
    "pg": "^8.3.0",
    "plop": "^3.0.5",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.9.0",
    "typeorm": "^0.2.21",
    "typescript": "^4.0.2"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.3.0",
    "@graphql-codegen/schema-ast": "^2.4.0",
    "@graphql-codegen/typescript-operations": "^2.2.1",
    "@graphql-codegen/typescript-resolvers": "^2.4.2",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.2",
    "@types/ioredis": "^4.17.4",
    "@types/jest": "^27.0.3",
    "@types/jsonwebtoken": "^8.3.5",
    "@types/lodash": "^4.14.149",
    "@types/morgan": "^1.7.37",
    "@types/node": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "apollo-server-testing": "^2.16.1",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.0.3",
    "prettier": "^2.0.5",
    "ts-jest": "^27.0.2"
  }
}
